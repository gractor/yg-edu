doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/board') Server Side Javascript
    ul
      each board in boards
        li
          a(href='/board/'+board.id)= board.title
  article
    form(action='/board/'+board.id+'/edit' method='post')
     p
       input(type='text' name='title' placeholder='title' value=board.title)
     p
       textarea(name='description' placeholder='description')=board.description
     p
       input(type='text' name='author' placeholder='author' value=board.author)
     p
       input(type='submit')
  ul
    li
      a(href='/board/add') add
