<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="/javascripts/jquery-1.11.2.min.js"></script>
    <script>
      function joinCheck(){
        if ($('#id').val().trim() == "") {
            var message = '아이디를 입력해주세요';
            $('#id').val('');
            $('#id').focus();
            return false;
        }
        if ($('#passwd').val().trim() == "") {
            var message = '비밀번호를 입력해 주세요';
            $('#passwd').val('');
            $('#passwd').focus();
            return false;
        }
        if ($('#name').val().trim() == "") {
            var message = '이름을 입력해 주세요';
            $('#name').val('');
            $('#name').focus();
            return false;
        }
        if ($('#age').val().trim() == "") {
            var message = '나이를 입력해 주세요';
            $('#age').val('');
            $('#age').focus();
            return false;
        }
      }
    </script>
  </head>
  <body>
    <h1><%= title %></h1>
    <br><br>
    <form class = 'form-inline' id = "joinForm" onsubmit="return joinCheck()" method="post">
      <div class="form-group">
          <label class="sr-only" for="exampleInputEmail3">ID</label>
          <input type="text" class="form-control" id="id" name="id" placeholder="Id">
      </div>
      <br><br>
      <div class="form-group">
          <label class="sr-only" for="exampleInputPassword3">PW</label>
          <input type="password" class="form-control" id="passwd" name="passwd" placeholder="Password">
      </div>
      <br><br>
      <div class="form-group">
          <label class="sr-only" for="exampleInputEmail3">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Name">
      </div>
      <br><br>
      <div class="form-group">
          <label class="sr-only" for="exampleInputPassword3">Age</label>
          <input type="text" class="form-control" id="age" name="age" placeholder="Age">
      </div>
      <br><br>
      <button type="submit" class="btn btn-default">Register</button>
    </form>
    <br>
    <form class="form-inline" action = '/joinForm' method="get">
      <button type="submit" class="btn btn-default">Revoke</button>
    </form>
  </body>
</html>
